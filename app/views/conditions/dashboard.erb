<h1>Weather Conditions Dashboard</h1>

<h2>Rides by Temperature</h2>
<table>
  <thead>
    <tr>
      <th>Temp Range</th>
      <th>Average Rides</th>
      <th>Most Rides</th>
      <th>Least Rides</th>
    </tr>
  </thead>
  <tbody>
    <% Condition.get_intervals('mean_temp').each do |intervals| %>
    <tr>
      <td><%= intervals[0] %>-<%= intervals[1] %></td>
      <td><%= Condition.ave_rides_per_condition(:mean_temp, intervals[0], intervals[1]) %></td>
      <td><%= Condition.most_rides_per_condition(:mean_temp, intervals[0], intervals[1]) %></td>
      <td><%= Condition.fewest_rides_per_condition(:mean_temp, intervals[0], intervals[1]) %></td>
    </tr>
    <% end %>
  </tbody>
</table>

