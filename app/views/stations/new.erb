<h1>Add a new station</h1>

<form action="/stations" method="post">
  <label>Name: </label>
  <input type="text" name="station[name]" />
  <label>Dock Count: </label>
  <input type="text" name="station[dock_count]" />
  <label>City: </label>
  <select name="station[city_id]">
    <option value="city_1">City 1</option>
    <option value="city_2">City 2</option>
    <option value="city_3">City 3</option>
  </select>
  <label>Installation Date: </label>
  <input type="text" name="station[installation_date]" />
  <label>Longitude: </label>
  <input type="text" name="station[longitude]" />
  <label>Latitude: </label>
  <input type="text" name="station[latitude]" />
  <input type="submit" value="Create Station" />
</form>
